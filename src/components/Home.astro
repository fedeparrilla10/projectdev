<header
  class="w-full h-screen flex flex-col gap-4 items-center justify-center relative bg-[#F0EBE0]"
>
  <img src="/projectdev/jarqueedited.png" class="hidden md:flex w-2/5" />
  <img src="/projectdev/logo2edited.png" class="flex md:hidden w-3/5" />
  <h2 class="text-2xl uppercase tracking-wider flex flex-col md:flex-row mt-1">
    <span class="font-semibold text-center pr-0.5">Regina Jarque</span> | Interior
    Design
  </h2>

  <a href="#home" id="scroll-link">
    <img
      src="/projectdev/arrow.svg"
      class="w-12 absolute bottom-10 animate-bounce"
    />
  </a>
</header>

<script>
  const scrollLink = document.getElementById("scroll-link");
  if (scrollLink) {
    scrollLink.addEventListener("click", (event) => {
      event.preventDefault();
      const target = document.querySelector("#home");
      if (target) {
        target.scrollIntoView({ behavior: "smooth" });
      }
    });
  }
</script>
